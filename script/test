#!/bin/bash 

echo "--------------"
echo "Running pytest"
echo "--------------"
python -m poetry run pytest
pytestexit=$?
echo "--------------"
echo "Running black"
echo "--------------"
python -m poetry run black . --check
blackexit=$?
echo "--------------"
echo "Running pyright"
echo "--------------"
python -m poetry run pyright
pyrightexit=$?

echo "Pytest status: $pytestexit"
echo "Black status: $blackexit"
echo "Pyright status: $pyrightexit"

sum="$(($pytestexit + $blackexit + $pyrightexit))"

if [ "$sum" != "0" ]; then
    exit 1
else
    exit 0
fi